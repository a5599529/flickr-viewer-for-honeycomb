<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">

	<ListView android:id="@+id/list_menu" android:choiceMode="singleChoice"
		android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:padding="50dp" />
	<View android:layout_width="1dp" android:layout_height="fill_parent"
		android:layout_alignParentRight="true" android:background="@drawable/sep" />

	<ViewSwitcher android:id="@+id/user_info_area"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true" android:padding="50dp">
	</ViewSwitcher>
</RelativeLayout>
