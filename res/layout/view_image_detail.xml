<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:padding="5dp" android:layout_height="fill_parent">
	<RelativeLayout android:layout_width="0dp"
		android:layout_weight="3" android:layout_height="fill_parent">
		<ImageView android:id="@+id/image" android:layout_width="wrap_content"
			android:layout_centerInParent="true" android:layout_height="wrap_content"
			android:layout_gravity="center" />
		<TextView android:id="@+id/titlebyauthor"
			android:layout_below="@id/image" android:layout_marginTop="10dp"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center" />
		<com.charles.ui.comp.UserActionBar
			android:background="@drawable/user_action_bar_bg"
			android:id="@+id/user_action_bar" android:layout_below="@id/titlebyauthor"
			android:layout_marginTop="20dp" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_alignLeft="@id/image"
			android:layout_alignRight="@id/image" />
	</RelativeLayout>
	<LinearLayout android:orientation="vertical"
		android:layout_width="0dp" android:layout_weight="2"
		android:layout_height="fill_parent">
		<ViewSwitcher android:id="@+id/switcher"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent">
				<TextView android:id="@+id/exifLabel" android:layout_width="wrap_content"
					android:layout_marginLeft="10dp" android:layout_height="wrap_content"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true" android:text="EXIF information:" />
				<ListView android:id="@+id/exifList" android:layout_height="fill_parent"
					android:layout_below="@id/exifLabel" android:layout_alignLeft="@id/exifLabel"
					android:layout_gravity="center" android:layout_width="fill_parent"
					android:padding="10dp" />
				<TextView android:id="@+id/empty" android:layout_width="wrap_content"
					android:layout_marginLeft="10dp" android:layout_toRightOf="@id/exifLabel"
					android:layout_height="wrap_content" android:text="No EXIF Information" />
			</RelativeLayout>
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent">
				<ProgressBar android:id="@+id/commentProgressBar"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_alignParentTop="true" />
				<TextView android:id="@+id/labelComment" android:text="Comments"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_alignParentLeft="true" android:layout_alignTop="@id/commentProgressBar"
					android:layout_alignBottom="@id/commentProgressBar"
					android:gravity="center" android:layout_marginLeft="10dp" />
				<ListView android:id="@+id/listComments"
					android:layout_below="@id/labelComment" android:layout_marginLeft="10dp"
					android:layout_alignLeft="@id/labelComment" android:layout_width="fill_parent"
					android:layout_height="fill_parent" />
			</RelativeLayout>
		</ViewSwitcher>
	</LinearLayout>
</LinearLayout>
