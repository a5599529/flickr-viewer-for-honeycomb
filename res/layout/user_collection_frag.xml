<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:padding="30dp"
	android:layout_width="match_parent" android:layout_height="match_parent">

	<!--
		<SearchView android:id="@+id/search_view" android:focusable="false"
		android:focusableInTouchMode="false"
		android:iconifiedByDefault="false" android:layout_marginBottom="10dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	-->
	<com.gmail.charleszq.ui.comp.UserPhotoCollectionComponent
		android:id="@+id/user_collection_list" android:layout_height="0dp"
		android:layout_weight="1" android:layout_width="fill_parent" />
	<LinearLayout android:layout_height="wrap_content"
		android:padding="10dp" style="@android:style/Holo.ButtonBar"
		android:layout_marginTop="20dp" android:layout_width="fill_parent"
		android:orientation="horizontal">
		<ImageView android:layout_width="32dp" android:clickable="true"
			android:background="@drawable/action_bar_item" android:layout_height="32dp"
			android:src="@drawable/add_gallery" android:layout_weight="1"
			android:scaleType="fitCenter" />
		<ImageView android:layout_width="32dp" android:clickable="true"
			android:scaleType="fitCenter" android:background="@drawable/action_bar_item"
			android:layout_height="32dp" android:src="@drawable/add_photo_set"
			android:layout_weight="1" />
		<ImageView android:layout_width="32dp" android:clickable="true"
			android:id="@+id/btn_refresh" android:scaleType="fitCenter"
			android:background="@drawable/action_bar_item" android:layout_weight="1"
			android:layout_height="32dp" android:src="@drawable/refresh" />
		<ImageView android:layout_width="32dp" android:clickable="true"
			android:id="@+id/btn_back" android:scaleType="fitCenter"
			android:background="@drawable/action_bar_item" android:layout_weight="1"
			android:layout_height="32dp" android:src="@drawable/back2" />
	</LinearLayout>

</LinearLayout>
