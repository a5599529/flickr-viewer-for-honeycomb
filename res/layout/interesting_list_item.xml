<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:minHeight="200dp" android:layout_width="fill_parent"
	android:layout_marginTop="20dp" android:layout_marginBottom="20dp"
	android:paddingTop="10dp" android:paddingBottom="10dp"
	android:orientation="vertical" android:layout_height="wrap_content">
	<ImageView android:id="@+id/small_img" android:layout_width="wrap_content"
		android:layout_gravity="center_horizontal" android:layout_height="200dp"
		android:paddingLeft="20dp" />
	<TextView android:id="@+id/title" android:layout_width="wrap_content"
		android:singleLine="true"
		android:layout_gravity="center_horizontal" android:layout_height="wrap_content" />
</LinearLayout>
